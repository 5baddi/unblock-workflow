{
  "name": "unblock-workflow",
  "version": "1.0.0",
  "description": "Unblock workflow studio",
  "author": "5baddi <project@baddi.info>",
  "private": true,
  "main": "build/server.js",
  "scripts": {
    "client-install": "cd src/client && yarn install",
    "clean": "shx rm -rf ./build/* ./public/*",
    "compile": "tsc",
    "prod": "cd src/client && yarn run prod",
    "build": "run-s clean compile prod",
    "start": "node -r dotenv/config ./build/server.js",
    "watch": "nodemon -r dotenv/config ./build/server.js -e ts,tsx --exec \"yarn run build && yarn run start\""
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "nodemon": "^2.0.15",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^17.0.15",
    "dotenv": "^16.0.0",
    "npx": "^10.2.2",
    "shx": "^0.3.4",
    "typescript": "^4.5.5",
    "yarn-run-all": "^3.1.1"
  }
}
